@page
@model ZPool.Areas.Identity.Pages.Account.Manage.EditCarModel
@{
    ViewData["Title"] = $"Edit {@Model.Car.Brand}";  // tab title
    ViewData["ActivePage"] = ManageNavPages.MyCars;
}

<h1>Edit Car</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Car.CarID" />
            <div class="form-group">
                <label asp-for="@Model.Car.Brand" class="control-label"></label>  @*Brand:*@
                <input asp-for="@Model.Car.Brand" class="form-control rounded-border" />
                <span asp-validation-for="@Model.Car.Brand" class="text-danger"></span>
                @*jQuery Validation, required field*@
            </div>
            <div class="form-group">
                <label asp-for="@Model.Car.Model" class="control-label"></label>
                <input asp-for="@Model.Car.Model" class="form-control rounded-border" />
                <span asp-validation-for="@Model.Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Car.Color" class="control-label"></label>
                <input asp-for="@Model.Car.Color" class="form-control rounded-border" />
                <span asp-validation-for="@Model.Car.Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Car.NumberPlate" class="control-label">Plate Number:</label>
                <input asp-for="@Model.Car.NumberPlate" class="form-control rounded-border" />
                <span asp-validation-for="@Model.Car.NumberPlate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Car.NumberOfSeats" class="control-label">Number of Seats:</label>
                    <input asp-for="@Model.Car.NumberOfSeats" class="form-control rounded-border" />
                    <span asp-validation-for="@Model.Car.NumberOfSeats" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-outline-success rounded-border" />
                    <a asp-page="./MyCars">Back to My Cars</a>
                </div>
        </form>
    </div>
</div>