@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete My Account";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group" style="width:200px">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control rounded-border" />
                <span asp-validation-for="Input.Password" class="text-danger rounded-border"></span>
            </div>
        }
        <button class="btn btn-danger rounded-border" type="submit">Delete my account</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}