@page
@model ZPool.Pages.Rides.DeleteRideModel
@{
    ViewData["Tilte"] = "DeleteRide";
}

<h2>Delete this Ride</h2>
<div class="form-group">
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.Ride.StartTime" class="control-label"></label>
            <input asp-for="@Model.Ride.StartTime" class="form-control rounded-border" disabled style="max-width: 13rem" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Ride.DepartureLocation" class="control-label"></label>
            <input asp-for="@Model.Ride.DepartureLocation" class="form-control rounded-border" disabled style="max-width: 13rem" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Ride.DestinationLocation" class="control-label"></label>
            <input asp-for="@Model.Ride.DestinationLocation" class="form-control rounded-border" disabled style="max-width: 13rem" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Ride.SeatsAvailable" class="control-label"></label>
            <input asp-for="@Model.Ride.SeatsAvailable" class="form-control rounded-border" disabled style="max-width: 13rem" />
        </div>
        <div class="form-group">
            @*<label asp-for="@Model.Ride.CarID" class="control-label"></label>*@
            <input hidden asp-for="@Model.Ride.CarID" class="form-control rounded-border" disabled style="max-width: 13rem" />
        </div>
        <input type="hidden" asp-for="Ride.RideID" />
        <input type="submit" value="Delete" class="btn btn-outline-danger rounded-border" />
        <a asp-area="Identity" asp-page="/Account/Manage/MyRides">Back to My Rides</a>

    </form>
</div>